@model IEnumerable<RestaurantApp.Models.Tables>

@{
    ViewBag.Title = "Index";
}

<h2>Occupied tables at the moment</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="tablesId">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bill)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bill)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    <button data-table-id="@item.Id" type="submit" class="btn-link js-delete">Pay the bill</button>
                </td>
            </tr>

        }
    </tbody>
</table>

@section scripts{
    <script>
        $(document).ready(function () {
            var table = $("#tablesId").DataTable();
            $("#tablesId .js-delete").on("click", function () {
               // alert("Raboti click");
                var button = $(this);
                bootbox.confirm("Close the bill?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/TablesAPI/" + button.attr("data-table-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }, error: function (err) {
                                console.log(err);
                            }
                        });
                    }
                });
               
            });
        });
    </script>
}

